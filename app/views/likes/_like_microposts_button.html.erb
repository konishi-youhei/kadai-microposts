<% if current_user.like_micropost?(micropost) %>
  <%= form_for(current_user.likes.find_by(micropost_id: micropost.id),html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'お気に入りをやめる', class: 'btn btn-danger btn-block btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'お気に入りする', class: 'btn btn-primary btn-block btn-xs' %>
  <% end %>
<% end %>

